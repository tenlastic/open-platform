{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@tenlastic/api": ["./modules/api/src"],
      "@tenlastic/dependency-injection": ["./modules/dependency-injection/src"],
      "@tenlastic/http": ["./modules/http/src"],
      "@tenlastic/kubernetes": ["./modules/kubernetes/src"],
      "@tenlastic/logging": ["./modules/logging/src"],
      "@tenlastic/mailgun": ["./modules/mailgun/src"],
      "@tenlastic/minio": ["./modules/minio/src"],
      "@tenlastic/mongoose-change-stream-nats": ["./modules/mongoose-change-stream-nats/src"],
      "@tenlastic/mongoose-migrations": ["./modules/mongoose-migrations/src"],
      "@tenlastic/mongoose-models": ["./modules/mongoose-models/src"],
      "@tenlastic/mongoose-permissions": ["./modules/mongoose-permissions/src"],
      "@tenlastic/nats": ["./modules/nats/src"],
      "@tenlastic/wait": ["./modules/wait/src"],
      "@tenlastic/web-server": ["./modules/web-server/src"],
      "@tenlastic/web-socket-server": ["./modules/web-socket-server/src"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "types": ["mocha", "node"]
  },
  "exclude": ["./node_modules/*"]
}
