[
  {
    "op": "add",
    "path": "/spec/template/spec/volumes",
    "value": [
      {
        "name": "node-modules",
        "persistentVolumeClaim": {
          "claimName": "node-modules"
        }
      },
      {
        "hostPath": {
          "path": "/run/desktop/mnt/host/c/open-platform/"
        },
        "name": "workspace"
      }
    ]
  },
  {
    "op": "replace",
    "path": "/spec/template/spec/containers/0",
    "value": {
      "command": ["npm", "run", "start"],
      "envFrom": [
        {
          "secretRef": {
            "name": "nodejs-environment-variables"
          }
        }
      ],
      "image": "node:12",
      "name": "api",
      "ports": [{ "containerPort": 3000 }],
      "volumeMounts": [
        {
          "mountPath": "/usr/src/app/projects/javascript/node_modules/",
          "name": "node-modules",
          "readOnly": true
        },
        {
          "mountPath": "/usr/src/app/",
          "name": "workspace",
          "readOnly": true
        }
      ],
      "workingDir": "/usr/src/app/projects/javascript/nodejs/applications/api/"
    }
  }
]
