{
  "compilerOptions": {
    "baseUrl": "./",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "es2016", "es2017", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "paths": {
      "@tenlastic/http": ["./modules/http/src"],
      "@tenlastic/json-schema": ["./modules/json-schema/src"],
      "@tenlastic/logging": ["./modules/logging/src"],
      "@tenlastic/mailgun": ["./modules/mailgun/src"],
      "@tenlastic/minio": ["./modules/minio/src"],
      "@tenlastic/mongoose-change-stream": ["./modules/mongoose-change-stream/src"],
      "@tenlastic/mongoose-change-stream-kafka": ["./modules/mongoose-change-stream-kafka/src"],
      "@tenlastic/mongoose-models": ["./modules/mongoose-models/src"],
      "@tenlastic/mongoose-models-kubernetes": ["./modules/mongoose-models-kubernetes/src"],
      "@tenlastic/mongoose-permissions": ["./modules/mongoose-permissions/src"],
      "@tenlastic/mongoose-unique-error": ["./modules/mongoose-unique-error/src"],
      "@tenlastic/web-server": ["./modules/web-server/src"],
      "@tenlastic/web-socket-server": ["./modules/web-socket-server/src"]
    },
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015",
    "types": ["mocha", "node"]
  },
  "exclude": ["./node_modules/*"]
}
